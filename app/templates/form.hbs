<div class=form-page>
  <div class='form-placement'>
      <div class="center-display">
        <h1 class='form'>Form</h1>
      </div>
      <div class="selected-item">
        <table class="pure-table pure-table-horizontal table-result">
          <caption>
            Tariff Information
          </caption>
          <tbody>
            {{#let @model.itemSelected as |item|}}
            <tr>
              <td>
                CET Code
              </td>
              <td>
                {{item.cetcode}}
              </td>
            </tr>
            <tr>
              <td>
                Surface (ID)
              </td>
              <td>
                {{item.id}}
              </td>
            </tr>
            <tr>
              <td>
                Levy
              </td>
              <td>
                {{item.lvy}}
              </td>
            </tr>
            <tr>
              <td>
                VAT
              </td>
              <td>
                {{item.vat}}
              </td>
            </tr>
            <tr>
              <td>
                Description
              </td>
              <td>
                {{item.description}}
              </td>
            </tr>
            {{/let}}
          </tbody>
        </table>
      </div>
      <div>
          <LinkTo @route="search-result">
            <button type="submit" class="pure-button pure-button-active edit-button">
              <svg xmlns="http://www.w3.org/2000/svg" width="10" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1
                  .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0
                  .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                />
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1
                  0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"
                />
            </svg>
            Edit
          </button>
        </LinkTo>
      </div>
    <section>
      <Form @model={{@model}} />
    </section>
  </div>
</div>
